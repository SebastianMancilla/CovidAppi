<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    android:id="@+id/cardCalls">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivCallNumber"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/ivCallNumber"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/ivCallNumber">

                <TextView
                    android:id="@+id/tvTitleP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    tools:text="Titulo Contacto"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/tvPhoneN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    tools:text="Call Number"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                tools:text="Aqui"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

                <ImageView
                    android:background="@color/Callbtn"
                    android:padding="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_phone"
                    />


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


